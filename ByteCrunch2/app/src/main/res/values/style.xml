<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color" >@color/light_text_color</item>
        <item name="background_color">@color/light_bg_color</item>
        <item name="hint_color" >@color/grey60</item>
        <item name="source_color">@color/grey90</item>
        <item name="nav_btn_color">@color/light_text_color</item>
        <item name="nav_btn_color_rev">@color/dark_text_color</item>

        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/roboto</item>
        <item name="body_font">@font/roboto</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <!--    here we define dark theme style -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar" >

        <item name="colorPrimary">#03DAC5</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/dark_text_color</item>
        <item name="background_color">@color/dark_bg_color</item>
        <item name="android:textColorSecondary">@color/dark_icon_tint_color</item>
        <item name="hint_color" >@color/grey30</item>
        <item name="source_color">@color/colorAccent</item>
        <item name="nav_btn_color">@color/colorPrimary</item>
        <item name="nav_btn_color_rev">@color/dark_text_color</item>



        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/roboto</item>
        <item name="body_font">@font/roboto</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <!-- Font style options -->
    <style name="SetFont_playfair_display" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/playfair_display</item>
        <item name="body_font">@font/playfair_display</item>
    </style>

    <style name="SetFont_montserrat" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/montserrat</item>
        <item name="body_font">@font/montserrat</item>
    </style>

    <style name="SetFont_roboto" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/roboto</item>
        <item name="body_font">@font/roboto</item>
    </style>

    <style name="SetFont_nunito_sans" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/nunito_sans</item>
        <item name="body_font">@font/nunito_sans</item>
    </style>

    <style name="SetFont_poppins" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/poppins</item>
        <item name="body_font">@font/poppins</item>
    </style>

    <style name="SetFont_proxima_nova" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/proxima_nova</item>
        <item name="body_font">@font/proxima_nova</item>
    </style>

    <style name="SetFont_lato" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="source_font">@font/nunito_sans</item>
        <item name="title_font">@font/lato</item>
        <item name="body_font">@font/lato</item>
    </style>



    <!-- AlertDialog style info -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#E12E2E</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#3030CF</item>
    </style>


</resources>


